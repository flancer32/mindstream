{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mindstream: Debug Backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/bin/app.mjs",
      "args": ["db:schema:create"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": [],
      "env": {},
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Mindstream: Debug Unit Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--test", "test/unit/**/*.test.mjs"],
      "console": "integratedTerminal",
      "env": {},
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
